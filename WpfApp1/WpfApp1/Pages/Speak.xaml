<Page x:Class="WpfApp1.Pages.Speak"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Speak">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="RecordBtn" Margin="5" Height="50" Width="200" Click="RecordBtn_Click" Content="Record"/>
            <TextBox Name="SpeakTxt" Margin="5" Width="200" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
            <Button Name="SpeakBtn" Margin="5" Height="50" Width="200" Click="SpeakBtn_Click" Content="Speak"/>
        </StackPanel>
    </Grid>
</Page>
