<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid >
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="Start" Margin="5" Height="50" Width="200" Click="Start_Click" Content="Record"/>
            <Button Name="stop" Margin="5" Height="50" Width="200" Click="stop_Click" Content="Stop"/>
            <TextBox Name="SpeakTxt" Margin="5" Width="200" Height="100"/>
            <Button Name="SpeakBtn" Margin="5" Height="50" Width="200" Click="SpeakBtn_Click" Content="Speak"/>
            
        </StackPanel>
    </Grid>
</Window>
